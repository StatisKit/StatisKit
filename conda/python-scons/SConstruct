env = Environment(tools = ['prefix',
                           'system',
                           'toolchain'])
          
if 'PREFIX' not in env:
    raise Exception('Installation of the \'prefix\' tool failed !')               
if 'SYSTEM' not in env:
    raise Exception('Installation of the \'system\' tool failed !')
if '-std=c++11' not in env['CXXFLAGS']:
    raise Exception('Installation of the \'toolchain\' tool failed !')

